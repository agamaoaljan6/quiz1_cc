<%- include('./partials/header') %>
<div class="container col-2 col-lg-6 mt-3">
  <% if (!username) {%>
  <div class="text-center bg-light align-content-center border-dark">
    <div class="card">
      <div class="card-body">
        <form action="/" method="POST">
          <div class="form-group">
            <label for="username">Username</label>
            <input type="text" name="username" class="form-control" id="username">
          </div>
          <input type="submit" class="btn btn-outline-secondary w-17" value="Sign In">
        </form>
      </div>
    </div>
  </div>
  <% }%>

  <%- include('./partials/footer') %>