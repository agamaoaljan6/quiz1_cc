<%- include("../partials/header") %>

<div class="card border-dark mb-3">
  <div class="card-header">New Cluck</div>
  <div class="card-body text-dark">
    <form action="/clucks" method="POST">
      <div>
        <label for="content"></label>
        <label for="content">Content</label> <br>
        <textarea name="content" class="col-4" rows="3" placeholder="Whatchoo cluckin' 'bout?"></textarea>
      </div>
      <div>
        <label for="image_url">Paste URL image here</label> <br>
        <input class="col-4" type="url" name="image_url" placeholder="https://something.jpg"> <br>
        <input class="btn btn-light mt-3" type="submit" value="Cluck it!">
      </div>
    </form>
  </div>
</div>
